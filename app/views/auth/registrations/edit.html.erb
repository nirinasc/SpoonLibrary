<%= render 'auth/shared/alerts'%>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
  <fieldset>
    <legend>General</legend>
      <div class="row">
        <div class="col-lg-6 col-md-6 col-sm-12">
          <div class="form-group">
            <%= f.label :firstname %>
            <%= f.text_field :firstname, class: ['form-control'] %>
            <% if resource.errors[:firstname].size > 0 %><div class="form-error">Firstname: <%= resource.errors[:firstname].first %></div><% end %>
          </div> 
        </div>
        <div class="col-lg-6 col-md-6 col-sm-12">
          <div class="form-group">
            <%= f.label :lastname %>
            <%= f.text_field :lastname, class: ['form-control'] %>
            <% if resource.errors[:lastname].size > 0 %><div class="form-error">Lastname: <%= resource.errors[:lastname].first %></div><% end %>
          </div>
        </div>
        <div class="col-lg-6 col-md-6 col-sm-12">
          <div class="form-group">
            <%= f.label :username %>
            <%= f.text_field :username, class: ['form-control'] %>
            <% if resource.errors[:username].size > 0 %><div class="form-error">Username: <%= resource.errors[:username].first %></div><% end %>
          </div>
        </div>
        <div class="col-lg-6 col-md-6 col-sm-12">
          <div class="form-group">
            <%= f.label :email %>
            <%= f.text_field :email, class: ['form-control'] %>
            <% if resource.errors[:email].size > 0 %><div class="form-error">Username: <%= resource.errors[:email].first %></div><% end %>
          </div>
        </div>      
      </div>
  </fieldset> 
  <fieldset>
    <legend>Address</legend>
    <div class="row">
      <div class="col-lg-6 col-md-6 col-sm-12">
          <div class="form-group">
              <%= f.label :country_code, 'Country' %>
              <%= f.country_select :country_code , { include_blank: 'Select your country please...' }, { class: 'form-control' } %>
              <% if resource.errors[:country_code].size > 0 %><div class="form-error">Country: <%= resource.errors[:country_code].first %></div><% end %>
          </div>
      </div>
      <div class="col-lg-6 col-md-6 col-sm-12">
         <div class="form-group">
              <%= f.label :city %>
              <%= f.text_field :city, autofocus: true, autocomplete: "city", class: ['form-control'] %>
              <% if resource.errors[:city].size > 0 %><div class="form-error">City: <%= resource.errors[:city].first %></div><% end %>
          </div>
      </div>
      <div class="col-lg-6 col-md-6 col-sm-12">
          <div class="form-group">
            <%= f.label :address %>
            <%= f.text_field :address, autofocus: true, autocomplete: "address", class: ['form-control'] %>
            <% if resource.errors[:address].size > 0 %><div class="form-error">Address: <%= resource.errors[:address].first %></div><% end %>
          </div>
      </div>
      <div class="col-lg-6 col-md-6 col-sm-12">
          <div class="form-group">
            <%= f.label :zip_code %>
            <%= f.text_field :zip_code, autofocus: true, autocomplete: "zip_code", class: ['form-control'] %>
          </div>
      </div>
      <div class="col-lg-6 col-md-6 col-sm-12">
          <div class="form-group">
            <%= f.label :phone %>
            <%= f.text_field :phone, autofocus: true, autocomplete: "phone", class: ['form-control'] %>
          </div>
      </div>
    </div>
  </fieldset>

  <fieldset>
    <legend>Passwords</legend>
      <div class="row">
        <div class="col-lg-6 col-md-6 col-sm-12">
          <div class="form-group">
            <%= f.label :password %> <i>(leave blank if you don't want to change it)</i> 
            <% if @minimum_password_length %>
              <em><%= @minimum_password_length %> characters minimum</em>
            <% end %>
            <%= f.password_field :password, autocomplete: "new-password" , class: ['form-control'] %>
            <% if resource.errors[:password].size > 0 %><div class="form-error">Password: <%= resource.errors[:password].first %></div><% end %>
          </div>
        </div>
        <div class="col-lg-6 col-md-6 col-sm-12">
          <div class="form-group">
            <%= f.label :password_confirmation %><br />
            <%= f.password_field :password_confirmation, autocomplete: "new-password", class: ['form-control']  %>
            <% if resource.errors[:password_confirmation].size > 0 %><div class="form-error">Password confirmation: <%= resource.errors[:password_confirmation].first %></div><% end %>
          </div>
        </div>
        <div class="col-lg-6 col-md-6 col-sm-12">
          <div class="form-group">
            <%= f.label :current_password %> <i>(we need your current password to confirm your changes)</i><br />
            <%= f.password_field :current_password, autocomplete: "current-password", class: ['form-control']  %>
            <% if resource.errors[:current_password].size > 0 %><div class="form-error">Current Password: <%= resource.errors[:current_password].first %></div><% end %>
          </div>
        </div>    
      </div>
  </fieldset>

  <div class="form-group">
      <%= f.submit "Update", class:['btn btn-default'] %>
  </div>
<% end %>

<%= link_to "<< Back", :back %>
